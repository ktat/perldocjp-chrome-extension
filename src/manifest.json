{
  "manifest_version": 2,

  "name": "Perldoc.jp 翻訳通知",
  "description": "search.cpan.org、metacpan.org、perldoc.perl.orgで表示しているドキュメントが、perldoc.jpで翻訳されている時に通知します。",
  "version": "0.1",
  "permissions": [
    "http://perldoc.jp/",
    "http://perldoc.perl.org/",
    "https://perldoc.perl.org/",
    "http://search.cpan.org/",
    "https://search.cpan.org/",
    "http://metacpan.org/",
    "https://metacpan.org/",
    "tabs",
    "alarms",
    "notifications"
  ],
  "web_accessible_resources": [
    "icon.ico"
  ],
  "page_action": {
    "default_icon": "perldocjp.png"
  },
  "options_page": "options.html",
   "background": {
    "scripts" : ["background.js"]
  }
}