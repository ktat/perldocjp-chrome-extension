{
    "manifest_version": 3,

    "name": "Perldoc.jp 翻訳通知",
    "description": "search.cpan.org、metacpan.org、perldoc.perl.orgで表示しているドキュメントがperldoc.jpで翻訳されている時に通知します。",
    "version": "0.3",
    "permissions": [
	"tabs",
	"alarms",
	"notifications",
	"storage",
	"scripting",
	"webRequest"
    ],
    "host_permissions": [
	"*://perldoc.jp/*",
	"*://perldoc.perl.org/*",
	"*://metacpan.org/*"
    ],
    "action": {
	"default_icon": "perldocjp.png"
    },
    "options_page": "options.html",
    "background": {
	"service_worker" : "background.js",
	"type": "module"
    }
}
