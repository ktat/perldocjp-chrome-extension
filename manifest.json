{
  "manifest_version": 2,

  "name": "Perldoc.jp",
  "description": "Notify when document is translated in perldoc.jp",
  "version": "1.0",

  "permissions": [
    "http://perldoc.jp/",
    "tabs",
    "alarms",
    "notifications"
  ],
  "web_accessible_resources": [
    "icon.ico"
  ],
//  "browser_action": {
//    "default_icon": "icon.ico"
//    "default_popup": "popup.html"
//  },
  "page_action": {
    "default_icon": "perldocjp.png"
  },
  "options_page": "options.html",
   "background": {
    "scripts" : ["background.js"]
  }
}